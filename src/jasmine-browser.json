{
  "srcDir": "e2e",
  "srcFiles": [
    "**/*.spec.ts"
  ],
  "specDir": "e2e",
  "specFiles": [
    "**/*[sS]pec.ts"
  ],
  "helpers": [
    "support/*.js"
  ],
  "env": {
    "stopSpecOnExpectationFailure": false,
    "random": true
  },
  "browser": {
    "name": "chrome",
    "options": {
      "args": [
        "--headless",
        "--disable-gpu",
        "--no-sandbox",
        "--disable-dev-shm-usage"
      ]
    }
  },
  "timeoutInterval": 30000
}
